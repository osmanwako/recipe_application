<%= form_with(model: food, class: 'add_food_form') do |form| %>
  <% if food.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block; font-family: 'Poppins', sans-serif; margin-top: 20px; margin-bottom: 10px" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :measurement_unit, style: "display: block; font-family: 'Poppins', sans-serif; margin-top: 20px; margin-bottom: 10px" %>
    <%= form.text_field :measurement_unit %>
  </div>

  <div>
    <%= form.label :price, style: "display: block; font-family: 'Poppins', sans-serif; margin-top: 20px; margin-bottom: 10px" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label :quantity, style: "display: block; font-family: 'Poppins', sans-serif; margin-top: 20px; margin-bottom: 10px" %>
    <%= form.number_field :quantity %>
  </div>

  <div>
    <%= form.submit class:'create_food_btn' %>
  </div>
<% end %>
