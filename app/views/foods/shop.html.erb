<%= stylesheet_link_tag("custom") %>
<div class="container">
<%= render "layouts/header" %>
<div class="row">
<div class="field"><h3 class="recipefood-title">Shopping List</h3></div>
<div class="row-table">
<% if (@foods.length > 0) %>
<div class="field-shop">
<h4> Total Value: $ <%= @total_value %> </h4>
<h4> Total Items: <%= @food_amount %> </h4>
</div>
<table class="table-food">
<tr>
<th class="table-col">Food</th>
<th class="table-col">Quantity</th>
<th class="table-col">Price</th>
</tr>
<% @foods.each do |food| %>
    <tr>
    <td class="table-col"><%= food.name %></td>
    <td class="table-col"><%= food.quantity %></td>
    <td class="table-col">$ <%= food.price %></td>
    </tr>
    <% end %>
</table>
<% else %>
<h4> No General Shopping List </h4>
<% end %>
</div>
</div>
</div>