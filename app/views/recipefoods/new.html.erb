<%= stylesheet_link_tag("custom") %>
<div class="container">
<%= render "layouts/header" %>
<div class="row add-ingredient">
<h3 class="recipefood-title">Add New Ingredient</h3>

<%= form_with model: [@recipe, @recipefood] do |form| %>
    <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
    </div>
    <div class="field">
    <%= form.label :measurement_unit %>
    <%= form.text_field :measurement_unit %>
    </div>
    <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, min: 0.01, step: 0.01, max: 100000 %>
    </div>
    <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, min: 1, step: 0.1, max: 100 %>
    </div>
    <div class= "field-action">
    <%= form.submit "Add", class: "btn-action" %>
    </div>
    <div class="field">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    </div>
  <% end %>
</div>  
</div>
</div>